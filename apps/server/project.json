{
  "name": "server",
  "projectType": "application",
  "sourceRoot": "apps/server/src",
  "tags": ["backend", "kotlin", "spring"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/server",
        "command": "gradle build"
      },
      "outputs": ["apps/server/build"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/server",
        "command": "gradle bootRun"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/server",
        "command": "gradle test"
      }
    }
  }
}
