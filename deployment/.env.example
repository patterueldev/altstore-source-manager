# Production Environment Configuration
# Copy this file to .env and update values for your deployment

# MongoDB
MONGO_USER=admin
MONGO_PASSWORD=your-secure-password-here

# MinIO
MINIO_ROOT_USER=your-minio-user
MINIO_ROOT_PASSWORD=your-minio-password
MINIO_PUBLIC_URL=https://your-host.example.com/public

# Backend
MONGO_URI=mongodb://admin:password@mongodb:27017/altstore?authSource=admin
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=devadmin
MINIO_SECRET_KEY=devsecret

# Frontend API base
VITE_API_URL=https://your-host.example.com

# Logging
LOG_LEVEL=info
