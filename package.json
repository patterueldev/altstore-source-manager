{
  "name": "@altstore/workspace",
  "version": "0.2.0",
  "description": "AltStore Source Manager - Full-stack JavaScript application",
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "type-check": "pnpm -r run type-check",
    "reset-admin": "cd /app/apps/server && node scripts/reset-admin.js",
    "check-versions": "node scripts/check-versions.js"
  },
  "pnpm": {
    "catalogs": {
      "default": {
        "typescript": "^5.3.0",
        "express": "^4.18.0",
        "mongoose": "^8.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "vite": "^5.0.0",
        "@vitejs/plugin-react": "^4.2.0",
        "tailwindcss": "^3.3.0",
        "postcss": "^8.4.0",
        "autoprefixer": "^10.4.0",
        "axios": "^1.6.0",
        "dotenv": "^16.3.0",
        "vitest": "^1.0.0",
        "@types/node": "^20.0.0",
        "@types/express": "^4.17.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "eslint": "^8.54.0",
        "prettier": "^3.1.0",
        "minio": "^7.1.0",
        "tsx": "^4.6.0",
        "serve": "^14.2.0"
      }
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0"
  }
}
